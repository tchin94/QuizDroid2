<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.washington.tchin94.quizdroid" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".QuizApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TopicSelection"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TopicOverview"
            android:label="@string/title_activity_topic_overview" >
        </activity>
        <activity
            android:name=".Question"
            android:label="@string/title_activity_question" >
        </activity>
        <activity
            android:name=".AnswerSummary"
            android:label="@string/title_activity_answer_summary" >
        </activity>
        <activity
            android:name=".MultiUseActivity"
            android:label="@string/title_activity_multi_use" >
        </activity>
        <activity
            android:name=".QuizApp"
            android:label="@string/title_activity_quiz_app" >
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <receiver
            android:name=".QuestionReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>

        <service
            android:name=".DownloadService"
            android:exported="false" >
        </service>

        <activity
            android:name=".DownloadFail"
            android:label="@string/title_activity_download_fail" >
        </activity>
    </application>

</manifest>
